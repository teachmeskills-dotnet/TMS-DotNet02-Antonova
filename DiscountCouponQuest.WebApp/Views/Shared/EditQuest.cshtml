@model QuestViewModel
<h2>Edit</h2>
<form method="post" asp-controller="Quests" asp-action="EditQuest" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="Id" hidden/>
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="Discount"></label><br />
        <input asp-for="Discount" />
        <span asp-validation-for="Discount"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" rows="3"></textarea>
    </div>
    <div>
        <label asp-for="ImageFile"></label><br />
        <input asp-for="ImageFile" />
        <span asp-validation-for="ImageFile"></span>
    </div>
    <fieldset disabled>
        <div class="form-group">
            <label asp-for="UniqueCode">Disabled input</label>
            <input asp-for="UniqueCode"  class="form-control">
        </div>
    </fieldset>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>