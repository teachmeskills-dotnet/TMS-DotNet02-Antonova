@model CustomerProfileViewModel

<div class="container emp-profile">
    <div class="row">
        <div class="col-md-4">
            <div class="profile-img">
                <img class="customer-img" style='width:105%; height:100%;' src="data:image/jpeg;base64,@(Convert.ToBase64String(Model.Image))" />
            </div>
        </div>
        <div class="col-md-6">
            <div class="tab-content profile-tab" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <div class="row">
                        <div class="col-md-6">
                            <label>Имя</label>
                        </div>
                        <div class="col-md-6">
                            <p class="user-name p-0 m-0">@Html.DisplayFor(m => m.FirstName)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Отчество</label>
                        </div>
                        <div class="col-md-6">
                            <p class="user-middleName p-0 m-0"> @Html.DisplayFor(m => m.MiddleName)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Фамилия</label>
                        </div>
                        <div class="col-md-6">
                            <p class="user-lastname p-0 m-0">@Html.DisplayFor(m => m.LastName)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Телефон</label>
                        </div>
                        <div class="col-md-6">
                            <p class="user-phone p-0 m-0">@Html.DisplayFor(m => m.PhoneNumber)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Бонусы</label>
                        </div>
                        <div class="col-md-6">
                            <p class="user-bonus p-0 m-0">@Html.DisplayFor(m => m.Bonus)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Личный счет</label>
                        </div>
                        <div class="col-md-6">
                            <p class="user-cash p-0 m-0">@Html.DisplayFor(m => m.Cash)</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <a class="profile-edit-btn" role="button" asp-controller="Profile" asp-action="QuestHistory">История</a>
                </div>
                <div class="col-md-4">
                    <a class="profile-edit-btn" asp-controller="Profile" asp-action="EditCustomerProfile" name="btnAddMore">Редактировать</a>
                </div>
            </div>
        </div>
    </div>
