<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Квест City</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i" rel="stylesheet">
    <link href="~/css/business-casual.min.css" rel="stylesheet">
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h1 class="site-heading text-center text-white d-none d-lg-block">
        <span class="site-heading-upper text-primary mb-3">Квесты в реальности</span>
        <span class="site-heading-lower">Квест City</span>
    </h1>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark py-lg-4" id="mainNav">
        <div class="container">
            <a class="navbar-brand text-uppercase text-expanded font-weight-bold d-lg-none" href="#">Start Bootstrap</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item active px-lg-4">
                        <a class="nav-link text-uppercase text-expanded" asp-controller="Home" asp-action="Index">
                            Главная
                            <span class="sr-only">(current)</span>
                        </a>
                    </li>
                    <li class="nav-item px-lg-4">
                        <a class="nav-link text-uppercase text-expanded" asp-controller="Home" asp-action="About">О нас</a>
                    </li>
                    <li class="nav-item px-lg-4">
                        <a class="nav-link text-uppercase text-expanded" asp-controller="Quests" asp-action="ChooseQuest">Выбрать квест</a>
                    </li>
                    @if (User.IsInRole("Provider"))
                    {
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-expanded" asp-controller="Quests" asp-action="MakeQuest">Создать квест</a>
                        </li>
                    }
                    <li class="nav-item px-lg-4">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    @User.Identity.Name
                                </button>
                                <div class="dropdown-menu" aria-labelledby="dropdownMenu2">
                                    @if (User.IsInRole("Customer"))
                                    {
                                        <a class="dropdown-item" asp-controller="Profile" asp-action="CustomerProfile">Личный кабинет</a>
                                    }
                                    <form method="post" asp-controller="Account" asp-action="Logout"><input class="dropdown-item" type="submit" value="Выход"></form>
                                </div>
                            </div>
                        }
                        else
                        {
                        <li class="nav-item px-lg-4">
                            <a class="nav-link text-uppercase text-expanded" asp-controller="Account" asp-action="LoginModel" >Вход</a>
                        </li>
                    }
                    </ul>
                </div>
            </div>
        </nav>
        <div class="container my-5">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
        <footer class="footer text-faded text-center py-5">
            <div class="container">
                <p class="m-0 small">Copyright &copy; Your Website 2020</p>
            </div>
        </footer>
        <!-- Bootstrap core JavaScript -->
        <script src="~/js/jquery.min.js"></script>
        <script src="~/js/bootstrap.bundle.min.js"></script>
        @RenderSection("Scripts", required: false)
    </body>
</html>